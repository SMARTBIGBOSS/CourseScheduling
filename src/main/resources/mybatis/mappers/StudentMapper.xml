<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anqili.application.dao.StudentDao">
	<resultMap id="studentResultMap" type="com.anqili.application.bean.Student" >
    	<id property="stuId" column="id" />
        <result property="stuNum" column="number" />
        <result property="stuName" column="name" />
        <result property="courseId" column="courseId" />
    </resultMap>
    
    <!-- Select student by ID -->
    <select id="selectStudentById" resultMap="studentResultMap">
    	select * from student order by id;
    </select>
    
    <!-- Select student by student number -->
    <select id="selectStudentByNum" resultMap="studentResultMap">
    	select * from student where number = #{stuNum};
    </select>
    
    <!-- Select student by courseID -->
    <select id="selectStudentByCourse">
    	select id, name, number, couseId, course.code, course.name 
    	from student left join course ON student.courseId = course.id
    	where id = #{courseId};
    </select>
    
    <!-- Update a specific student by ID -->
    <update id="updateStudent">
    	
    </update>
    
    <!-- Insert a new student -->
    <insert id="insertStudent"></insert>
</mapper>